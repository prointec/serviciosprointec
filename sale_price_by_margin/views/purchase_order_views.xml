<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                <field name="x_old_standard_price" readonly="1" optional="hide"/>
                <field name="x_margin_first"  readonly="1" optional="hide"/>
                <field name="x_margin_first_price" readonly="1" optional="hide"/>
                <field name="x_margin_second" readonly="1" optional="hide"/>
                <field name="x_margin_second_price" readonly="1" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
