<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="msu_product_form_tree_inherit" model="ir.ui.view">
            <field name="name">product.template.form.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="x_margin_first" readonly="1" optional="show"/>
                    <field name="x_margin_second" readonly="1" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="msu_product_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="standard_price_uom" position="after">
                    <label for="x_last_cost" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div name="x_last_cost" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
                        <field name="x_last_cost" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                        <span groups="uom.group_uom" class="oe_read_only">per
                            <field name="uom_name"/>
                        </span>
                    </div>
                 </div>
                <xpath expr="//page[@name='sales']//group[@name='sale']" position="inside">
                    <group string="MÃ¡rgenes Comerciales" name="comercial_margin" id="comercial_margin">
                        <group>
                            <label for="x_margin_first"/>
                            <div>
                                <field name="x_margin_first" attrs="{'required':[('sale_ok','=',True)]}" class="oe_inline"/>
                            </div>
                            <label for="x_margin_second"/>
                            <div>
                                <field name="x_margin_second" attrs="{'required':[('sale_ok','=',True)]}" class="oe_inline"/>
                            </div>
                            <field name="x_round_factor" attrs="{'required':[('sale_ok','=',True)]}"/>
                        </group>
                        <group>
                            <field name="x_margin_first_price" readonly="1"/>
                            <field name="x_margin_second_price" readonly="1"/>
                            <field name="x_price_update_manual" invisible="1"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>