                                        <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </t>
                    <t t-if="lines_service_canceled">
                        <br/>
                        <h6>CANCELADOS</h6>
                        <table class="tble" cellspacing="0">
                            <thead class="tble-header">
                                <tr style="font-size:16px">
                                    <th class="text-right"><strong>Subtotal</strong></th>
                                    <th class="text-right"><strong>%Imp</strong></th>
                                    <th class="text-right"><strong>Monto Imp.</strong></th>
                                    <th class="text-right"><strong>Total</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_tax_amount" t-value="0" />
                                <t t-set="total_amount" t-value="0" />

                                <t t-foreach="lines_service_canceled" t-as="line">
                                    <t t-set="total_tax_amount" t-value="total_tax_amount + line['tax_amount']"/>
                                    <t t-set="total_amount" t-value="total_amount + line['total']"/>
