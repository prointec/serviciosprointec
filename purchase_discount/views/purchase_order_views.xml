<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="replace">
                <field name="x_price_unit" attrs="{'readonly': [('invoice_lines', '!=', [])]}"/>
                <field name="x_discount_calc_type" invisible="1" />
                <field name="x_discount" attrs="{'readonly':[('x_discount_calc_type','=','m')]}" />
                <field name="x_amount_discount" attrs="{'readonly':[('x_discount_calc_type','=','p')]}" />
            </xpath>
        </field>
    </record>
</odoo>
