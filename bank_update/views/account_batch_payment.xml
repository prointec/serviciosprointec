<odoo>
    <data>
        <record id="xview_account_batch_payment_form_inherit_bank_update" model="ir.ui.view">
            <field name="name">xview.account.payment.form.inherit.bank_update</field>
            <field name="model">account.batch.payment</field>
            <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id" domain="[('type', 'in', ('bank', 'cash'))]" widget="selection"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>