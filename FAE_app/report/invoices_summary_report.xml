<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="action_invoices" model="ir.actions.report">
        <field name="name">Resumen de Ventas</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">FAE_app.invoices_summary_report</field>
        <field name="report_file">FAE_app.invoices_summary_report</field>
        <field name="print_report_name">FAE_app.invoices_summary_report</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <template id="internal_layout_inherit">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-3">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                </div>
                <div class="col-2 offset-2 text-center">
                </div>
                <div class="col-2 offset-3 text-right">
                    <ul class="list-inline">
                        <li class="list-inline-item"><span class="page"/></li>
                        <li class="list-inline-item">/</li>
                        <li class="list-inline-item"><span class="topage"/></li>
                    </ul>
                </div>
            </div>
            <br/>
            <div style="text-align: center;font-size:14px;">
                <center><span t-esc="company.name"/></center>
            </div>
        </div>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
    </template>


    <template id="invoices_summary_report">
        <t t-call="web.html_container">
            <t t-call="FAE_app.internal_layout_inherit">
                <div class="page">
                    <style type="text/css">
                        .bdy {
                            font-size:20px;
                            padding-bottom:60px;
                        }
                        .tble {
                            width: 100%;
                            margin-bottom: 1rem;
                            font-size:20px;
                        }
                        .rounded2{
                            border: 1px solid;
                            padding:5px 5px;
                        }
                        .tble-header {
                            height: 25px;
                            font-size: 14px;
                            text-align: center;
                            line-height: 25px;
                            text-decoration: none;
                            font-weight: bold;
                            border-top: 1px solid #dee2e6;
                            border-bottom: 1px solid #dee2e6;
                            background:#f4f6f6;
                        }
                    </style>
                    <h4><center>FACTURACIÓN</center></h4>
                    <strong><center>Reporte en el período desde el <span t-esc="from_day"/>-<span t-esc="from_month"/>-<span t-esc="from_year"/>
                         hasta el  <span t-esc="to_day"/>-<span t-esc="to_month"/>-<span t-esc="to_year"/></center></strong>
                    <br/>
                    <strong><center>RESUMEN DE VENTAS POR PORCENTAJE DE IMPUESTO</center></strong>
                    <br/>

                    <t t-foreach="tax_lines_summary" t-as="lae">
                        <h6> <span t-esc="'Actividad Eco.:  ' + str(lae['ae'].get('code')) + ' - ' + str(lae['ae'].get('name','.'))[:80]"/> </h6>
                        <span>DOCUMENTOS ELECTRÓNICOS</span> <br/>
                        <t t-if="lae['lines_gppds_with_doc']">
                            <strong>Productos tipo Bienes</strong>
                            <table class="tble" cellspacing="0">
                                <thead class="tble-header">
                                    <tr style="font-size:12px">
                                        <th width="20%" class="text-right" ><strong>Dólares</strong></th>
                                        <th width="20%" class="text-right" ><strong>Sub-total</strong></th>
                                        <th width="20%" class="text-right" ><strong>%Imp</strong></th>
                                        <th width="20%" class="text-right" ><strong>Monto Imp.</strong></th>
                                        <th width="20%" class="text-right" ><strong>Total</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total_tax_amount" t-value="0" />
                                    <t t-set="total_amount" t-value="0" />
                                    <t t-foreach="lae['lines_gppds_with_doc']" t-as="line">
                                        <t t-set="total_tax_amount" t-value="total_tax_amount + line['tax_amount']"/>
                                        <t t-set="total_amount" t-value="total_amount + line['total']"/>
                                        <tr style="font-size:12px">
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal_dol']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_percent']"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_amount']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['total']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="font-size:12px">
                                        <td colspan="2" />
                                        <td class="text-right" ><strong>TOTALES</strong>
                                        </td>
                                        <td class="text-right" >
                                            <span t-esc="total_tax_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                        <td class="text-right" >
                                            <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-if="lae['lines_services_with_doc']">
                            <strong>Servicios</strong>
                            <table class="tble" cellspacing="0">
                                <thead class="tble-header">
                                    <tr style="font-size:12px">
                                        <th width="20%" class="text-right" ><strong>Dólares</strong></th>
                                        <th width="20%" class="text-right" ><strong>Sub-total</strong></th>
                                        <th width="20%" class="text-right" ><strong>%Imp</strong></th>
                                        <th width="20%" class="text-right" ><strong>Monto Imp.</strong></th>
                                        <th width="20%" class="text-right" ><strong>Total</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total_tax_amount" t-value="0" />
                                    <t t-set="total_amount" t-value="0" />
                                    <t t-foreach="lae['lines_services_with_doc']" t-as="line">
                                        <t t-set="total_tax_amount" t-value="total_tax_amount + line['tax_amount']"/>
                                        <t t-set="total_amount" t-value="total_amount + line['total']"/>
                                        <tr style="font-size:12px">
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal_dol']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_percent']"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_amount']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['total']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="font-size:12px">
                                        <td colspan="2" />
                                        <td class="text-right" >
                                            <strong>TOTALES</strong>
                                        </td>
                                        <td class="text-right" >
                                            <span t-esc="total_tax_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                        <td class="text-right" >
                                            <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <br/>
		                <!-- resumen de impuestos que no tienen doc electrónico -->
                        <t t-if="lae['lines_gppds_not_doc'] or  lae['lines_services_not_doc']">
                            <span>SIN DOCUMENTOS ELECTRÓNICOS</span> <br/>
                            <t t-if="lae['lines_gppds_not_doc']">
                                <strong>Productos tipo Bienes</strong>
                                <table class="tble" cellspacing="0">
                                    <thead class="tble-header">
                                        <tr style="font-size:12px">
                                            <th width="20%" class="text-right" ><strong>Dólares</strong></th>
                                            <th width="20%" class="text-right" ><strong>Sub-total</strong></th>
                                            <th width="20%" class="text-right" ><strong>%Imp</strong></th>
                                            <th width="20%" class="text-right" ><strong>Monto Imp.</strong></th>
                                            <th width="20%" class="text-right" ><strong>Total</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_tax_amount" t-value="0" />
                                        <t t-set="total_amount" t-value="0" />
                                        <t t-foreach="lae['lines_gppds_not_doc']" t-as="line">
                                            <t t-set="total_tax_amount" t-value="total_tax_amount + line['tax_amount']"/>
                                            <t t-set="total_amount" t-value="total_amount + line['total']"/>
                                            <tr style="font-size:12px">
                                                <td class="text-right" >
                                                    <span t-esc="line['subtotal_dol']" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                                <td class="text-right" >
                                                    <span t-esc="line['subtotal']" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                                <td class="text-right" >
                                                    <span t-esc="line['tax_percent']"/>
                                                </td>
                                                <td class="text-right" >
                                                    <span t-esc="line['tax_amount']" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                                <td class="text-right" >
                                                    <span t-esc="line['total']" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr style="font-size:12px">
                                            <td colspan="2" />
                                            <td class="text-right" >
                                            <strong>TOTALES</strong>
                                            </td>
                                            <td class="text-right" >
                                            <span t-esc="total_tax_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                            <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            <t t-if="lae['lines_services_not_doc']">
                                <strong>Servicios</strong>
                                <table class="tble" cellspacing="0">
                                    <thead class="tble-header">
                                        <tr style="font-size:12px">
                                            <th width="20%" class="text-right" ><strong>Dólares</strong></th>
                                            <th width="20%" class="text-right" ><strong>Sub-total</strong></th>
                                            <th width="20%" class="text-right" ><strong>%Imp</strong></th>
                                            <th width="20%" class="text-right" ><strong>Monto Imp.</strong></th>
                                            <th width="20%" class="text-right" ><strong>Total</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_tax_amount" t-value="0" />
                                        <t t-set="total_amount" t-value="0" />

                                        <t t-foreach="lae['lines_services_not_doc']" t-as="line">
                                            <t t-set="total_tax_amount" t-value="total_tax_amount + line['tax_amount']"/>
                                            <t t-set="total_amount" t-value="total_amount + line['total']"/>
                                            <tr style="font-size:12px">
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal_dol']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['subtotal']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_percent']"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['tax_amount']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="line['total']" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            </tr>
                                        </t>
                                        <tr style="font-size:12px">
                                            <td colspan="2" />
                                            <td class="text-right" ><strong>TOTALES</strong>
                                            </td>
                                            <td class="text-right" >
                                            <span t-esc="total_tax_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                            <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                        <br/>
                    </t>
                    <br/>
                    <strong><center>DETALLES DE VENTAS POR DOCUMENTO</center></strong>
                    <br/>
                    <table class="tble" cellspacing="0" style="font-size:12px">
                        <thead class="tble-header">
                            <tr style="font-size:12px">
                                <!-- 7 px x caracter (15char x pulgada) -->
                                <th width="56px" class="text-left"><strong>Id</strong></th>
                                <th width="32px"><strong>Est</strong></th>
                                <th width="150px" class="text-left"><strong>Num.Electrónico</strong></th>
                                <th width="26px" class="text-center"><strong>dgt</strong></th>
                                <th width="70px" class="text-left"><strong>Fecha</strong></th>
                                <th width="60px" class="text-left"><strong>F.emi</strong></th>
                                <th width="220px" class="text-left"><strong>Cliente</strong></th>
                                <th width="60px" class="text-center"><strong>T.C.</strong></th>
                                <th width="76px" class="text-right"><strong>Impuesto</strong></th>
                                <th width="100px" class="text-right"><strong>Total</strong></th>
                            </tr>
                        </thead>
                        <tbody class="mt16 mb30" style="border-bottom: 1px solid #dee2e6">
                            <t t-set="total_tax" t-value="0" />
                            <t t-set="total_amount" t-value="0" />
                            <t t-set="total_amount_accepted" t-value="0" />
                            <t t-set="currency_ant" t-value="'.'" />
                            <t t-set="currency_symbol_ant" t-value="'.'" />
                            <t t-foreach="list_docs" t-as="line">
                                <t t-if="currency_ant != line['currency']">
                                    <t t-if="currency_ant != '.'">
                                        <tr style="font-size:11px">
                                            <td colspan="5" class="text-left">
                                                <strong>Total aceptado por Hacienda: </strong>
                                                <span t-esc="currency_symbol_ant"/>
                                                <span t-esc="total_amount_accepted" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td colspan="3" class="text-right" >
                                                <strong>TOTALES</strong>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="currency_symbol_ant"/>
                                                <span t-esc="total_tax" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="font-size:11px">
                                        <td colspan="6">
                                            <span t-esc="{'CRC':'COLONES', 'USD':'DOLARES'}.get(line['currency_name'],line['currency_name'])"/>
                                        </td>
                                    </tr>
                                    <t t-set="currency_ant" t-value="line['currency']" />
                                    <t t-set="currency_symbol_ant" t-value="line['currency_symbol']" />
                                    <t t-set="total_tax" t-value="0" />
                                    <t t-set="total_amount" t-value="0" />
                                    <t t-set="total_amount_accepted" t-value="0" />
                                </t>
                                <t t-set="total_amount" t-value="total_amount + line['amount_total']"/>
                                <t t-set="total_tax" t-value="total_tax + line['amount_tax']" />
                                <t t-if="line['state_dgt']=='A'">
                                    <t t-set="total_amount_accepted" t-value="total_amount_accepted + line['amount_total']"/>
                                </t>
                                <tr style="font-size:11px">
                                    <td class="text-left">
                                        <span t-esc="line['origen']+' '+str(line['id'])"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-if="line['state']">
                                            <span t-esc="line['state']"/>
                                        </t>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="(line['td'] or '_') + ' ' + (line['sequence'] or ' ')"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line['state_dgt']"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line['date'][:10]"/>
                                    </td>
                                    <td class="text-left">
                                        <t t-if="line['issue_date']">
                                            <span t-esc="line['issue_date'][2:10]"/>
                                        </t>
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line['partner']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="line['currency_name']!='CRC'">
                                            <span t-esc="line['currency_rate']" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['currency_symbol']"/>
                                        <span t-esc="line['amount_tax']" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['amount_total']" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                </tr>
                            </t>
                            <tr style="font-size:11px">
                                <td colspan="5" class="text-left">
                                    <strong>Total aceptado por Hacienda: </strong>
                                    <span t-esc="currency_symbol_ant"/>
                                    <span t-esc="total_amount_accepted" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                                <td colspan="3" class="text-right" >
                                    <strong>TOTALES</strong>
                                </td>
                                <td class="text-right" >
                                    <span t-esc="currency_symbol_ant"/>
                                    <span t-esc="total_tax" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                                <td class="text-right" >
                                    <span t-esc="total_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</data>
</odoo>
